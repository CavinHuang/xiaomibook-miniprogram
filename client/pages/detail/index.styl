.new-page 
  background #fff
  width 100%
  height 100%
  .main-card 
    border-bottom 10px solid #f5f5f5
    background #fff
    &:last-child
      border-bottom none
    &.-folder 
      padding-bottom 1px
      .cnt 
        margin-bottom 12px
      .text 
        color #8d8d8d
        line-height 1.6
        font-size 14px
      .tail 
        text-align center
        font-size 14px
        padding 1px 0
        color #8d8d8d
      .icon-xiangxia 
        color #7f7f7f
    .u-title 
      margin-bottom 8px
  .u-book 
    position relative
    & .price, & .count
      color #6e6e6e
      font-size 12px
    &.-detail 
      padding 30px 20px 30px 30px
      display table
      width 100%
      box-sizing border-box
      .book-cover 
        width 93px
        height 124px
        margin-right 18px
      .author 
        color #4b99a7
        line-height 1.4
        margin-top 4px
        font-size 12px
        & > navigatort 
          display inline-block
          margin-right 5px
      .info 
        padding 0
        display table-cell
        vertical-align middle
      .title 
        margin-bottom 13px
        font-size 16px
        overflow hidden
        font-weight 400
        color #000
      .u-grade 
        margin 3px 0 6px 0
        line-height 1
      .price 
        color #727272
      .read
        margin-top 4px
        font-size 12px
        color #8d8d8d
    .u-booktag 
      margin-left 3px

  .book-cover 
    float left
    margin-right 10px
    image 
      width 100%
      height 100%
    &:after 
      content ''
      position absolute
      top 0
      bottom 0
      left 0
      right 0
  .u-grade 
    line-height 1
    .grade 
      background url(http://dushu.xiaomi.com/8lqyfBwW.png) no-repeat
      background-size 90px
    .grade 
      background-size 78px
      height 12px
      width 80px
      margin 0 5px 0 0
      background-position 0 1px
    .grade0 
      background-position 0 0px
    .grade1 
      background-position 0 -16px
    .grade2 
      background-position 0 -32px
    .grade3 
      background-position 0 -48px
    .grade4 
      background-position 0 -64px
    .grade5 
      background-position 0 -80px
    .grade6 
      background-position 0 -96px
    .grade7 
      background-position 0 -112px
    .grade8 
      background-position 0 -128px
    .grade9 
      background-position 0 -144px
    .grade10 
      background-position 0 -160px
.main-card>.u-title, .main-card>.cnt, .main-card .list li, .main-card>.tail, .main-card>.bd 
  padding-left 14px
  padding-right 14px

.new-page .u-grade .grade,.u-grade .txt 
  display inline-block
  vertical-align middle
  line-height 1em
.book-dash 
  .wrap 
    padding 0 14px
    margin 0 0 27px
  .wrap2 
    padding 0 14px
    margin -20px 0 15px 0
  .u-foler 
    margin-top 10px
  .hr 
    border-top 1px solid #f0f0f0
    margin 0px 0 10px 0
.comment-sofa 
  color #8f8f8f
  padding-bottom 10px
.tip-10086 
  font-size 12px
.btn-group 
  width 100%
  font-size 0
  white-space nowrap
  .btn-item 
    display inline-block
    width 49%
    &:first-child 
      margin-right 2%
    &:only-child 
      width 100%
.u-btn2,.u-btn3,.u-btn4, .u-btn-disable 
  display block
  height 2.8em
  line-height 2.8em
  text-align center
  color #737373
  border 1px solid #ddd
  background #fff
  border-radius 4px
  font-size 14px
  -webkit-box-sizing border-box
.u-btn2,.u-btn4 
  background #f35d02
  border 1px solid #e35109
  color #fff
  padding 0 10px
.u-btn2,.u-btn3 
  position relative
.u-btn-disable 
  background-color #eee
  color #aaa
  border 1px solid #ddd
.u-btn2 .icn-limit-free, .u-btn3 .icn-limit-free 
  position absolute
  top -1px
  right 5%
.m-limitinfo 
  font-size 12px
  padding-left 5px
  padding-bottom 3px
  vertical-align middle
  .icn-clock 
    margin-right 8px
    margin-top -2px
.book__download-tip 
  background #000
  opacity .85
  display flex
  align-items center
  padding 10px 15px
  box-sizing border-box
  font-size 12px
  color #fff
  .close 
    width 20px
  .logo 
    width 45px
    margin 0 8px 0 14px
  .info 
    flex 1
    text-align left
    .ttl 
      font-size 16px
      color #e88023
  .button 
    border-radius 4px
    color #fff
    line-height 2.4em
    background #fc662a
    -webkit-appearance none
    font-size 14px
    padding 0 10px
.book-dash-text 
  &:after 
    content '\5f00\59cb\9605\8bfb'
.book-page .m-combo-tips, .book-page .m-limitinfo 
  margin-top 10px
.icn-clock 
  display inline-block
  width 15px
  height 15px
  background url(http://dushu.xiaomi.com/X6EtK7FD.png) no-repeat
  background-size 15px

.u-booktag 
  border 1px solid #00a0e9
  color #55b4ec
  border-radius 4px
  font-size 12px
  line-height 16px
  display inline-block
  -webkit-transform scale(.83)
  padding 0 2px
  &.-serial 
    color #63bd6e
    border-color #63bd6e 
.Lazy_waiting image, .Lazy_loading image 
  opacity 0
  -webkit-transition opacity .4s
.Lazy_loaded 
  image 
    opacity 1


.u-folder 
  .folder-top 
    font-size 16px
    font-weight normal
    color #8d8d8d
    padding 14px 14px 8px
  .folder-cnt 
    position relative
    line-height 1.6
    padding 0 14px
    margin-bottom 10px
    font-size 14px
    color #585858
    &.-fold 
      display -webkit-box
      text-overflow ellipsis
      overflow hidden
      -webkit-line-clamp 5
      -webkit-box-orient vertical
      & + .folder-more 
        display block
        width 14px
        height 14px
        margin -5px auto 5px
        background-image url(sxxHEoTa.png)
        background-position 0 3px
        background-repeat no-repeat
        background-size contain
  & > .folder-tail 
    text-align center
    font-size 14px
    border-top 1px solid #f0f0f0
    color #8d8d8d
    & > div[data-href] 
      padding 10px 14px
.u-folder_text .folder-cnt>.placeholder-top,
.u-folder_text .folder-cnt>.placeholder-more 
  display none
.u-folder_text 
  .folder-cnt 
    &.-fold 
      display block
      max-height 8em
      & > .placeholder-top 
        content ''
        display block
        float right
        height 6.4em
        width 0
      & > .placeholder-more 
        clear both
        color #ff7800
        display block
        float right
        position relative
        top -.2rem

.m-tag 
  line-height 1
  overflow hidden
  .u-tag 
    margin 0 10px 5px 0
    display inline-block
    width auto
    line-height 1.8em
    padding 0 20px
    color #766d5d
    border-radius 4px
    background #909da8
    font-size 14px
    text-align center
    border 1px solid #d3d3d3
  &.-author 
    margin-bottom 2px
  &.-color 
    .u-tag 
      &:nth-child(3n 
        & + 1) 
          background-color #fbebe8
        & + 2) 
          background-color #fcedda
        & + 3) 
          background-color #e8f9db
 
.u-title 
  padding-top 15px
  font-size 15px
  color #8d8d8d
  h1 
    font-size 15px
    font-weight 400
