.swiper-container
  position relative
  .swiper
    height 300rpx
    .img
      width 100%
      height 100%
  .dots
    position absolute
    overflow hidden
    right 7px
    bottom 10px
    opacity .7
    .dot
      float left
      text-align center
      -webkit-tap-highlight-color rgba(0, 0, 0, 0)
      display block
      height 2px
      width 15px
      border-radius 2px
      box-sizing border-box
      margin-left 3px
      background-color #ccc
    .active
      width 24rpx
      background #e70e37
